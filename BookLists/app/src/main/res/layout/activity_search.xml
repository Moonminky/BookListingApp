<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/books">

    <EditText
        android:id="@+id/search_query"
        android:layout_width="@dimen/editableWidth"
        android:layout_height="@dimen/editableHeight"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:hint="@string/editable_placeholder"
        android:inputType="text"
        android:background="@drawable/search_background"
        android:textColor="@color/editableTextColor"
        android:textColorHint="@color/editableTextColor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/searchButtonText"/>

</LinearLayout>